Title: Suggest A Event
---
<suggest title="Event" :fields="fields" url="https://github.com/daveaglick/discoverdotnet/new/master/input/data/events"></suggest>

@section Script {
    <script type="text/javascript">
        Vue.component('suggest', httpVueLoader('/components/suggest.vue'));

        Vue.mixin({
            data: function () {
                return {
                    fields: [
                        {
                            name: "Title",
                            description: "<strong>Required.</strong> The title of the event.",
                            required: true
                        },
                        {
                            name: "Website",
                            description: "The URL of the event."
                        },
                        {
                            name: "Description",
                            description: "A description of the event."
                        },
                        {
                            name: "Image",
                            description: "A URL to an image or logo of the event."
                        },
                        {
                            name: "Location",
                            description: "A plain text description of the location of the event."
                        },
                        {
                            name: "Country",
                            description: "The localized country name where the event is located (used for filtering)."
                        },
                        {
                            name: "Lat",
                            description: "A rough latitude in decimal form of the event location used for mapping and proximity calculations. If you need to lookup the latitude you can use <a href='http://www.geonames.org/'>GeoNames</a>."
                        },
                        {
                            name: "Lon",
                            description: "A rough longitude in decimal form  of the event location used for mapping and proximity calculations. If you need to lookup the longitude you can use <a href='http://www.geonames.org/'>GeoNames</a>."
                        },
                        {
                            name: "Date",
                            description: "The date of the event in YYYY/MM/DD format."
                        },
                        {
                            name: "EndDate",
                            description: "The end date of the event in YYYY/MM/DD format (if the event is more than one day long)."
                        },
                        {
                            name: "Time",
                            description: "The local time of the event in 24 hour HH:MM format."
                        },
                        {
                            name: "EndTime",
                            description: "The local end time of the event in 24 hour HH:MM format (if there is a set end time)."
                        }
                    ]
                };
            }
        })
    </script>
}